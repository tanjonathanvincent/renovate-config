{
  "extends": [
    "github>tanjonathanvincent/renovate-config"
  ],
  "assignees": [
    "tanjonathanvincent"
  ],
  "baseBranches": [
    "develop"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardAutoClose": true,
  "packageRules": [
    {
      "updateTypes": [
        "major"
      ],
      "labels": [
        "Update-MajorVersion :warning:",
        "dependency updates"
      ],
      "prBodyNotes": [
        ":warning: This is a major release and may include breaking changes. Please review and check the logs carefully before merging this PR." 
      ]
    },
    {
      "updateTypes": [
        "minor"
      ],
      "labels": [
        "Update-MinorVersion :arrow_up:",
        "dependency updates"
      ]
    },
    {
      "updateTypes": [
        "patch"
      ],
      "labels": [
        "Update-Patch :adhesive_bandage:",
        "dependency updates"
      ],
      "automerge": true
    },
    {
      "updateTypes": [
        "lockFileMaintenance"
      ],
      "labels": [
        "Update-LockFileMaintenance :lock:",
        "dependency updates"
      ],
      "automerge": true
    }
  ],
  "separateMinorPatch": true
}